<mvc:View controllerName="AvelonNamespace.AvelonNotification.controller.Home" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<f:SimpleForm>
					<f:content>
						<Label text="Manual notification ID"></Label>
						<Input value="{path : 'NotificationForm>/ManualNotifId'}" required="true" maxLength="32"></Input>
						
						<Label text="Instance ID"></Label>
						<Input value="{path : 'NotificationForm>/Instid'}" liveChange="handleUserInput" required="true" maxLength="70"></Input>
						
						<Label text="Type ID"></Label>
						<Input value="{path : 'NotificationForm>/Typeid'}" required="true" maxLength="32"></Input>
						
						<Label text="Category ID"></Label>
						<Select selectedKey="{path : 'NotificationForm>/Catid'}" items = "{path : 'Default>/CatidSet'}">
							<core:Item key="{Default>Catid}" text="{Default>Catid} - {Default>Description}"/>
						</Select>
						<!--<ComboBox editable="true" id="catid" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%" items="{
			path: '/CatidSet'
		}">
                            <items>
                                <core:Item text="{Catid} - {Description}" key="{Catid}" enabled="true"/>
                            </items>
                        </ComboBox>-->
						
						<Label text="Notification date"></Label>
						<DatePicker valueFormat="yyyy-MM-dd" required="true" value="{path : 'NotificationForm>/NotifDate'}"></DatePicker>
						
						<Label text="Description"></Label>
						<Input value="{path : 'NotificationForm>/Description'}" required="true" maxLength="255"></Input>
					
						<Button text="Save" press="createNotification"></Button>
					</f:content>
				</f:SimpleForm>
				
				<List
	id="NotificationList"
		headerText="Notifications"
		items="{
			path: 'Default>/NotificationInfoSet'
		}" >
		
		<items>
		<ObjectListItem
				title="{Default>ManualNotifId}"
				type="Active"
				press="onPress"
				>
				<attributes>
					<ObjectAttribute text="{Default>Instid}" />
					<ObjectAttribute text="{Default>Typeid}" />
					<ObjectAttribute text="{Default>Catid}" />
				</attributes>
				
			</ObjectListItem>
		</items>
	</List>
				
				
            </Page>
		</pages>
	</App>
</mvc:View>